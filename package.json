{
  "marp": {
    "inputDir": "./",
    "output": "./public",
    "themeSet": "./data/etc/marp/themes"
  },
  "scripts": {
    "start": "PORT=5050 marp --theme-set ./data/etc/marp/themes --theme semusings -c ./data/etc/marp/marp.config.js -s ./",
    "clean": "rm -rf public",
    "build": "marp --theme-set ./data/etc/marp/themes --theme semusings -c ./data/etc/marp/marp.config.js  -I ./ -o ./public"
  },
  "dependencies": {
    "@kazumatu981/markdown-it-kroki": "^1.3.5",
    "@marp-team/marp-cli": "^4.0.4"
  }
}
